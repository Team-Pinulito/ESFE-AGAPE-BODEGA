@page "/bodega-detalles/{Id:int}"

@using ESFE_AGAPE_BODEGA.DTOs.BodegaDTOs; // Asegúrate de que este espacio de nombres sea el correcto
@using Microsoft.AspNetCore.Components.Forms;
@using ESFE_AGAPE_BODEGA.BlazorWebAssembly.DataService;

<ESFE_AGAPE_BODEGA.BlazorWebAssembly.Pages.Login.AuthGuard>
    <ESFE_AGAPE_BODEGA.BlazorWebAssembly.Pages.Login.AutorizacionPorRol Rol="Admin">
        <h3>Ver Bodega</h3>
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label for="Nombre">Nombre:</label>
                    <input type="text" class="form-control" disabled @bind="bodega.Nombre" />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="Descripcion">Descripcion:</label>
                    <input type="text" class="form-control" disabled @bind="bodega.Descripcion" />
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-12">
                <NavLink href="/lista-bodega" class="btn btn-primary">Ir a buscar bodegas</NavLink>
            </div>
        </div>
    </ESFE_AGAPE_BODEGA.BlazorWebAssembly.Pages.Login.AutorizacionPorRol>
</ESFE_AGAPE_BODEGA.BlazorWebAssembly.Pages.Login.AuthGuard>
@code {
    // Parámetro para recibir el ID de la bodega desde la llamada al componente
    [Parameter]
    public int Id { get; set; }

    // Inyección de dependencia de BodegaService para acceder a sus métodos
    [Inject]
    BodegaService bodegaService { get; set; }

    // Creación de una instancia de ObtenerBodegaIdDto para almacenar los datos de la bodega
    GetIdResultBodegaDTO bodega = new GetIdResultBodegaDTO();

    /*
         *  Se utiliza para realizar inicializaciones o tareas
         *  cuando se carga una página o componente de Blazor.
         * Este método se llama automáticamente cuando el componente se está inicializando
         *  antes de que se muestre en la interfaz de usuario.
         */
    protected override async Task OnInitializedAsync()
    {
        // En el momento de inicialización del componente, llama al método ObtenerBodega de
        //  BodegaService para obtener los datos de la bodega con el ID proporcionado
        bodega = await bodegaService.ObtenerBodega(Id);
    }
}
